<!DOCTYPE html>
<html>
    <%- include("partials/header.ejs") %>
    <body>
        <main>
            <h1>Cool Images</h1>
            <form action="/search">
                <input type="text" placeholder="Type Keyword" name="keyword" />
                <br><br>
                <button>Search</button>
            </form>
            <hr>
            <% imageUrlArray.forEach(function(imageUrl, i) { %>
                <%- (i % 3 == 0) ? "<br>" : ""  %>
                    <img src="<%= imageUrl %>" width="200px" height="200px" />
                    <img class="favoriteIcon" src="img/favorite.png" width="20px" />
            <% }); %>
        </main>
        <%- include("partials/footer.ejs") %>
    </body>
</html>